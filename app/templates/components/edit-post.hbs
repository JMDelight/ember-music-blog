{{#if editPost}}
<h4>Edit {{post.title}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"  placeholder=post.title}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=post.author}}
    </div>
    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category" placeholder=post.category}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content id="content" placeholder=post.content}}
    </div>
    <div class="form-group">
      <p>Originally posted {{date-display post.timestamp}}</p>
      <label for="timestamp">Date</label>
      {{input type="date" value=(date-display post.timestamp) id="timestamp" }}
    </div>
    <button {{action 'edit' post}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'editPostShow'}}>Update</button>
{{/if}}
